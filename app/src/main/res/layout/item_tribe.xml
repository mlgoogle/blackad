<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_12"
        android:layout_marginTop="10dp"
        android:layout_marginRight="@dimen/space_12"
        android:layout_marginBottom="@dimen/space_4"
        android:orientation="vertical"
        app:cardCornerRadius="3dp"
        app:cardElevation="2dp">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/shapeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/text_tab_bg"
            android:orientation="vertical"
            android:padding="@dimen/space_12">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/titleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="超哥创业俱乐部"
                    android:textColor="@color/color_434343"
                    android:textSize="@dimen/textsize_16" />

                <View
                    android:id="@+id/dotView"
                    android:layout_width="7dp"
                    android:layout_height="7dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/shape_dot" />

            </LinearLayout>


            <TextView
                android:id="@+id/contentText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="3dp"
                android:text="主要聊聊电视剧，主要是美剧，偶尔也有点其他国家电视剧 ，或者电影。总之，电视不是比电影低档的艺术形式。"
                android:textColor="@color/color_a6a6a6"
                android:textSize="@dimen/textsize_12" />

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>