<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLayout"
    android:layout_width="120dp"
    android:layout_height="35dp"
    android:background="@drawable/shape_tribe_float"
    android:clickable="true"
    android:orientation="vertical">

    <com.yundian.blackcard.android.view.RoundImageView
        android:id="@+id/leftIcon"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:src="@mipmap/icon_tribe_apply"
        app:roundHeight="7dp"
        app:roundWidth="7dp" />

    <TextView
        android:id="@+id/contentText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/leftIcon"
        android:text="部落申请"
        android:textColor="@color/color_white"
        android:textSize="@dimen/textsize_12" />

    <View
        android:id="@+id/dotView"
        android:layout_width="7dp"
        android:layout_height="7dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:layout_marginTop="@dimen/space_4"
        android:background="@drawable/shape_dot" />
</RelativeLayout>